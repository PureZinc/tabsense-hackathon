{
    "manifest_version": 3,
    "name": "TabSense",
    "version": "1.0",
    "description": "Keep track of your Chrome experience.",
    "action": {
      "default_popup": "html/popup.html",
      "default_icon": {
        "48": "assets/dot.png"
      }
    },
    "permissions": [
        "storage", 
        "activeTab", 
        "scripting",
        "tabs",
        "notifications",
        "cookies",
        "identity"
    ],
    "host_permissions": [
      "https://www.googleapis.com/*"
    ],
    "background": {
      "service_worker": "js/service-worker.js"
    },
    "icons": {
        "48": "assets/dot.png"
    }
}